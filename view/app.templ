}

templ Map() {
	<div id="map" class="overflow-hidden rounded-xl size-full"></div>
	<script>showMap()</script>
}

templ Controls() {
	<div class="flex flex-col w-2/6 h-full mr-1 ">
		@Audience()
		@FilePicker()
	</div>
}

